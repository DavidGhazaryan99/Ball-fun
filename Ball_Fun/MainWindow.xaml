<Window x:Class="Ball_Fun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ball_Fun"
        mc:Ignorable="d"
        x:Name="main" Title="MainWindow" Height="420" Width="800"  WindowStyle="None">
    <Grid x:Name="grid" >
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="29" Width="99"/>
        <Ellipse Fill="Red" x:Name="ball" HorizontalAlignment="Left" Height="52" Stroke="Black" VerticalAlignment="Top" Width="54" Margin="66,205,0,0"/>
        <TextBlock x:Name="EndText"  HorizontalAlignment="Left" Margin="152,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="204" Width="500" FontWeight="Bold" FontStyle="Italic" TextDecorations="{x:Null}" FontFamily="Century" FontSize="72" TextAlignment="Center" Foreground="#FFEE0000"/>

    </Grid>
</Window>
